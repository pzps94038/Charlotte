<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/shoppingCart_Row_radioButton"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/red"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/shoppingCart_Row_ImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="商品圖片"
        android:src="@drawable/person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/shoppingCart_Row_radioButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shoppingCart_Row_productTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:text="說明"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/shoppingCart_Row_ImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shoppingCart_Row_ReduceBtn"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shoppingCart_Row_CountTextView" />

    <EditText
        android:id="@+id/shoppingCart_Row_CountTextView"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/shoppingCart_Row_PlusBtn" />

    <Button
        android:id="@+id/shoppingCart_Row_PlusBtn"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>